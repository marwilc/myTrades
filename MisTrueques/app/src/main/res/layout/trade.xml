<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_margin="6dp"
            android:id="@+id/iv_picture_trade"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/img_smartphone"
            />

        <TextView
            android:id="@+id/tv_description_trade"
            android:layout_margin="6dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:layout_toEndOf="@id/iv_picture_trade"
            android:layout_toRightOf="@id/iv_picture_trade"
            />

        <TextView
            android:id="@+id/tv_date_trade"
            android:layout_margin="6dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_description_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_date_inbox"
            android:layout_alignParentEnd="true"
            />



    </RelativeLayout>



</android.support.v7.widget.CardView>